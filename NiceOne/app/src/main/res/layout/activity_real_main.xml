<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nba5137.niceone.RealMainAct"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#F00"
        android:text="Now enjoy."
        android:textStyle="bold"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:id="@+id/phb"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ph"/>

    <ImageButton
        android:id="@+id/xvb"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/xv"/>

    <ImageButton
        android:id="@+id/t8b"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/t8"/>

    <ImageButton
        android:id="@+id/rtb"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="290dp"
        android:background="@drawable/rt"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="485dp"
        android:text="Author: NBA5137"
        android:textColor="#FFF"
        android:textSize="12dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/quit"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="468dp"
        android:layout_marginLeft="5dp"
        android:textAllCaps="false"
        android:text="I realized real life is better."
        />

    <ProgressBar
        android:id="@+id/progressBarB"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="460dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        />


    <WebView
        android:id="@+id/pvb"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="380dp">

    </WebView>


</RelativeLayout>
